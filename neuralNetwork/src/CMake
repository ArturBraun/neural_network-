cmake_minimum_required(VERSION 3.5)



set(SOURCE_FILES ActivFunctions.h BackPropagation.h BreastCancerClassification.h BreastCancerClassification.cpp Layer.cpp Layer.h main.cpp NeuralNetwork.cpp NeuralNetwork.h NeuralNetworkImplementation.cpp NeuralNetworkImplementation.h Perceptron.cpp Perceptron.h TrainingData.cpp TrainingData.h GUI.cpp GUI.h GUI_.h GUI.ui)

set(CMAKE_AUTOMOC ON)
set(CMAKE_AUTOUIC ON)

find_package(Qt5Core REQUIRED)
find_package(Qt5Widgets REQUIRED)
find_package(Qt5Gui REQUIRED)


add_library(src ${SOURCE_FILES})

target_link_libraries(GUI Qt5::Widgets)
target_link_libraries(GUI Qt5::Gui)
